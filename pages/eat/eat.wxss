/* pages/eat/eat.wxss */
page{
  width: 95%;
  margin: 0 auto;
}
.centerFood {
  width: 100%;
  height: 60px;
  text-align: center;
  margin-top: 160px;
  margin-bottom: 120px;
  font-size: 30px;
}

.start {
  border: 1px solid rgba(0, 0, 0, 0.10);
  border-radius: 6px;
  font-family: PingFang, PingFang-SC;
  font-weight: SC;
  text-align: center;
  color: #6d7278;
  background: white;
  width: 45%;
  height: 72rpx;
line-height: 72rpx;
}

.eat {
  margin-left: 24px;
  color: white;
  background: #005eeb;
  width: 45%;
  height: 72rpx;
  line-height: 72rpx;
  text-align: center;
  border-radius: 6px;
  box-shadow: 0px 5px 10px 0px rgba(0, 102, 255, 0.20);
}
.btn-list{
  display: flex;
  justify-content: center;
  width: 80%;
  margin: 0 auto;
}

.line {
  width: 98%;
  margin: 12px auto;
  height: 1px;
  background: #e5e5e5;
}
.sub-title {
  font-size: 16px;
  font-family: PingFang, PingFang-SC;
  font-weight: SC;
  text-align: left;
  color: #6d7278;
  line-height: 12px;
}
.close{
  width:38rpx;
  height: 38rpx;
  margin-right: 24rpx;
  position: absolute;
  right: 12rpx;
  top:26rpx;
}
.line-chose{
  position: relative;
  font-size: 16px;
font-family: PingFangSC, PingFangSC-Medium;
font-weight: 500;
text-align: left;
color: #1c2434;
line-height: 30px;
margin: 12rpx auto;
padding: 12rpx;
box-shadow: 2px 4px 10px 0px rgba(3,19,91,0.10); 
}
.normal{
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.sub-name{
  font-size: 12px;
  color: gray;
}
.emoj-img{
  width: 20px;
  height: 20px;
  margin-left: 12rpx;
}
.emoj-line-show{
  height: 50px;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  flex-wrap: wrap;
  margin: 20rpx;
  box-shadow: 2px 4px 10px 0px rgba(3,19,91,0.10); 
  transition: height 1s;
}
.emoj-line{
  height: 0;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  flex-wrap: wrap;
  transition: height 1s;
  margin: 0;
  box-shadow: 2px 4px 10px 0px rgba(3,19,91,0.10); 
}
.emoj-line-show image{
  width: 24px;
  height: 24px;
  margin: 12rpx;
  transition: height 1s;
}
.emoj-line image{
  width: 0px;
  height: 0px;
  margin: 12rpx;
  transition: height 1s;
}